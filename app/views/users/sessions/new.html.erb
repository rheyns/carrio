<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>

      <fieldset>
        <legend>Sign in</legend>
        <div class="control-group">
          <%= f.label :email, :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Enter your email.",
                                        :"original-title" => "Email" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Pick a password.",
                                        :"original-title" => "Password" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :remember_me, :class => "control-label" %>
          <div class="controls">
            <%= f.check_box :remember_me %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag nil, nil, :class => "control-label" %>
          <div class="controls">
            <%= f.submit "Sign up", :class => "btn btn-success" %>
          </div>
        </div>

      </fieldset>
    <% end %>
  </div>
</div>

<%= render "links" %>
