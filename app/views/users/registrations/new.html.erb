<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Sign up</legend>
        <div class="control-group">
          <%= f.label :first_name, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :first_name, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Enter your first name.",
                                        :"original-title" => "First Name" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :last_name, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :last_name, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Enter your last name.",
                                        :"original-title" => "Last Name" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Enter your email.",
                                        :"original-title" => "Email" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :class => "input-xlarge", :rel => "popover",
                             :data => { :content => "Pick a password.",
                                        :"original-title" => "Password" } %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag nil, nil, :class => "control-label" %>
          <div class="controls">
            <%= f.submit "Sign up", :class => "btn btn-success" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
<%= render "links" %>
