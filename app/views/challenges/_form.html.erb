<div class="row">
  <div class="span8">
    <%= form_for(@challenge) do |f| %>
      <% if @challenge.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

          <ul>
          <% @challenge.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <fieldset>
        <legend><%= title %></legend>

        <div class="control-group">
          <%= f.label :title, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :title, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :description, :class => "control-label" %>
          <div class="controls">
            <%= f.text_area :description, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :award, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :award, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :deadline, :class => "control-label" %>
          <div class="controls">
            <%= f.datetime_select :deadline, :class => "input-xlarge", :ampm => true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :post_date, :class => "control-label" %>
          <div class="controls">
            <%= f.datetime_select :post_date, :class => "input-xlarge", :ampm => true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :image, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :image, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :url_reference, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :url_reference, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :discussion_board, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :discussion_board, :class => "input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag nil, nil, :class => "control-label" %>
          <div class="controls">
            <%= f.submit nil, :class => "btn btn-success" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
