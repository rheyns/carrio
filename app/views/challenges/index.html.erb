<h1>Listing challenges</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Award</th>
    <th>Deadline</th>
    <th>Post date</th>
    <th>Image</th>
    <th>Url reference</th>
    <th>Discussion board</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.title %></td>
    <td><%= challenge.description %></td>
    <td><%= challenge.award %></td>
    <td><%= challenge.deadline %></td>
    <td><%= challenge.post_date %></td>
    <td><%= challenge.image %></td>
    <td><%= challenge.url_reference %></td>
    <td><%= challenge.discussion_board %></td>
    <td><%= link_to 'Show', challenge %></td>
    <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', challenge, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

